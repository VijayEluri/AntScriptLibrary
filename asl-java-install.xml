<project name="asl-java-install">
    <dirname property="asl-java-install.basedir" file="${ant.file.asl-java-install}"/>

    <import file="${asl-java-install.basedir}/asl-java-build.xml"/>

    <property name="java-install.app-dir"        location="${common.target-dir}/install"/>
    <property name="java-install.app-lib-dir"    location="${java-install.app-dir}/lib"/>
    <property name="java-install.app-config-dir" location="${java-install.app-dir}/config"/>
    
    <!-- ***********************************************************************
    * target: install
    ************************************************************************ -->
    <target name="install" depends="dist, -install-jar, -install-libs, -install-config"
            description="Creates an installable directory structure"/>
    
    
    <!-- ***********************************************************************
    * target: -install-jar
    ************************************************************************ -->
    <target name="-install-jar">
        <mkdir dir="${java-install.app-dir}"/>
        <copy todir="${java-install.app-dir}" file="${java-build.dist-file}"/>
    </target>
        
    <!-- ***********************************************************************
    * target: -install-libs
    ************************************************************************ -->
    <target name="-install-libs">
        <mkdir dir="${java-install.app-lib-dir}"/>
        <copy todir="${java-install.app-lib-dir}">
            <path refid="java-build.classpath"/>
        </copy>
    </target>

    <!-- ***********************************************************************
    * target: -install-config
    ************************************************************************ -->
    <target name="-install-config">
        <mkdir dir="${java-install.app-config-dir}"/>
        <copy todir="${java-install.app-config-dir}">
            <path refid="java-build.classpath"/>
        </copy>
    </target>
</project>
